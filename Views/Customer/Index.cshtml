    <link href="~/Styles/sass/home.css" rel="stylesheet" />
    <style>
        .bg-image {
            /* The image used */
            background-image: url(/Images/addgame.jpg);
            /* Add the blur effect */
            filter: blur(8px);
            -webkit-filter: blur(8px);
            /* Full height */
            height: 110%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            width:110%;
            z-index:-1;
        }

        a{
            font-size:20px;
        }

         .card {
             opacity:1;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            z-index:2;
        }

         .container {
             position:relative;
            background-color: transparent;
            opacity: 0.2;
            height: 350px;
            width: 300px;
            margin-left: -15px;
            margin-top: -15px;
            border-radius: 25px;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            z-index: 1;
        }

        .container2 {
            position: absolute;
            margin-top: -300px;
            z-index: 2;
        }

        #dearUser{
            color: black;
            font-size: 20px;
            margin-top: 10px;
            font-style:italic;
        }


    </style>
    <title>Home</title>
</head>
