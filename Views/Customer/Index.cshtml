

@{ string[] games = { "/Images/pop.jpg", "/Images/ac.jpg", "/Images/batman.jpg", "/Images/bio.jpg", "/Images/cod.jpg", "/Images/forza.jpg", "/Images/gta.jpg", "/Images/hzd.jpg", "/Images/pubg.jpg", "/Images/rdr2.jpg", "/Images/witcher.jpg" };
}

@{
    var game = ViewBag.Message;
    var i = 0;
    int show = 0;
}


<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Styles/sass/home.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-1.4.4.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.4.4.js"></script>
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <style>
        body {
            background-color: black;
            z-index: -2;
        }

        .bg-image {
            /* The image used */
            background-image: url(/Images/addgame.jpg);
            /* Add the blur effect */
            filter: blur(8px);
            -webkit-filter: blur(8px);
            /* Full height */
            height: 100%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            width: 100%;
            z-index: -1;
        }

        .card-container {
            margin-top: -50px;
            height: 600px;
            width: 98%;
        }

        .card {
            opacity: 1;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            z-index: 2;
            width: 400px;
            height: 540px;
        }

        .container {
            position: relative;
            background-color: transparent;
            opacity: 0.7;
            height: 540px;
            width: 400px;
            margin-left: -15px;
            margin-top: -15px;
            border-radius: 25px;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            z-index: 1;
        }

        .container2 {
            position: relative;
            margin-top: -300px;
            z-index: 2;
        }

        #dearUser {
            color: black;
            font-size: 20px;
            margin-top: 10px;
            font-style: italic;
        }

        .btn {
            width: 200px;
            margin-left: 85px;
            margin-top: 250px;
        }


        .tags {
            color: white;
        }

        .date {
            color: black;
        }

        a {
            font-size: 18px;
        }
    </style>
    <title>Home</title>
</head>
<body>
    <div class="bg-image"></div>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand"><u>Video Game Rental Store</u></a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Customer")</li>
                <li>@Html.ActionLink("Top 5 Games", "TopGames", "Customer")</li>
                <li>
                <li>@Html.ActionLink("About Us", "AboutUs", "Customer")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    show = 1;

                    <li id="dearUser" style="padding-left:600px;">Dear - @User.Identity.Name</li>
                    <li style="font-size: 15px;">@Html.ActionLink("Logout", "Logout", "Login")</li>
                }
                else
                {
                    show= 0;

                    <li style="padding-left:860px;">@Html.ActionLink("Login", "Index", "Login")</li>
                }


            </ul>

        </div>
    </nav>



    @using (Html.BeginForm("Rent", "Customer"))
    {
    <div class="card-container">

        @for (i = 0; i < game.Count; i++)
        {


            <div class="card">
                <div class="container" style="background-image: url(@games[i]);"></div>
                <div class="container2">
                    <button type="submit" class="btn btn-block btn-large btn-primary" name="submit" value="@game[i].game_id">Rent Now</button>
                </div>
            </div>
        }
        
    </div>
    }
    <script>
        $(document).ready(function () {
            
            console.log(@show);
            if (@show == "1") {
                $('[name=submit]').show();
            }

            else {
                $('[name=submit]').hide();
            }

            $.ajax({
                url: 'https://localhost:44309/api/Games',
                type: 'GET',
                async: false,
                success: function (d) {
                    console.log(d);
                }
            });

            });
    </script>

</body>
</html>
