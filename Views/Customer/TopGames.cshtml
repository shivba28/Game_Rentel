<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Styles/sass/home.css" rel="stylesheet" />
    <title>TopGames</title>
    <style>
        #dearUser {
            color: black;
            font-size: 20px;
            margin-top: 10px;
            font-style: italic;
        }

        .bg-image {
            /* The image used */
            background-image: url(/Images/addgame.jpg);
            /* Add the blur effect */
            filter: blur(8px);
            -webkit-filter: blur(8px);
            /* Full height */
            height: 110%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            width: 100%;
            z-index: -1;
        }

        .card-container {
            position: relative;
            margin-top: -400px;
            height: 400px;
            width: 57%;
            margin-left: 40%;
        }

        .card-container2 {
            position: relative;
            margin-top: 120px;
            height: 400px;
            width: 23%;
            margin-left: 6.5%;
        }

        .card:hover ~ .card {
            transform: translateX(150px);
        }

        .card {
            opacity: 1;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            z-index: 2;
            width: 300px;
            height: 350px;
        }

        .card-container2 .card {
            height: 350px;
            width: 300px;
        }

        .container {
            position: relative;
            background-color: transparent;
            opacity: 0.7;
            height: 350px;
            width: 300px;
            margin-left: -15px;
            margin-top: -15px;
            border-radius: 25px;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            z-index: 1;
        }

        .card-container2 .container {
            position: relative;
            background-color: transparent;
            opacity: 0.7;
            height: 350px;
            width: 300px;
            margin-left: -15px;
            margin-top: -15px;
            border-radius: 25px;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            z-index: 1;
        }

        .container2 {
            position: relative;
            margin-top: -300px;
            z-index: 2;
        }

        #dearUser {
            color: black;
            font-size: 20px;
            margin-top: 10px;
            font-style: italic;
        }

        .btn {
            width: 200px;
            margin-left: 30px;
            margin-top: 250px;
        }


        .tags {
            color: white;
        }

        .date {
            color: black;
        }

        a {
            font-size: 18px;
        }

        .img1 {
            position: absolute;
            top: 13%;
            left: 13%;
            width: 150px;
            height: auto;
            z-index: 4;
        }

        .img2 {
            position: absolute;
            top: 10px;
            margin-left: -100px;
            z-index: 1;
            width: 750px;
            height: 750px;
        }

        span {
            width: 800px;
            font-size: 40px;
            color: white;
            position: absolute;
            margin-top: 100px;
            margin-left: 500px;
            z-index: 4;
        }
    </style>
</head>
<body>
    <div class="bg-image"></div>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand"><u>Video Game Rental Store</u></a>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index")</li>
                <li class="active">@Html.ActionLink("Top 5 Games", "TopGames")</li>
                <li>
                <li>@Html.ActionLink("About Us", "AboutUs", "Customer")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    show = 1;

                    <li id="dearUser" style="padding-left:600px;">Dear - @User.Identity.Name</li>
                    <li style="font-size: 15px;">@Html.ActionLink("Logout", "Logout", "Login")</li>
                }
                else
                {
                    show = 0;

                    <li style="padding-left:850px;">@Html.ActionLink("Login", "Index", "Login")</li>
                }

            </ul>
        </div>
    </nav>
    @using (Html.BeginForm("Rent", "Customer"))
    {
        <img class="img1" src="~/Images/crown.png" />
        <div class="card-container2">
            <div class="card">
                <div class="container" style="background-image: url(/Images/pop.jpg);"></div>
                <div class="container2">
                    <button type="submit" name="submit" value="1" class="btn btn-block btn-large btn-primary">Rent Now</button>
                </div>
            </div>
        </div>
        <div class="card-container">
            @for (int j = 1; j < count; j++)
            {

                <div class="card">
                    <div class="container" style="background-image: url(@games[k]);"></div>
                    <div class="container2">
                        <button type="submit" name="submit" value="@top[j].Id" class="btn btn-block btn-large btn-primary">@top[j].name</button>
                    </div>
                </div>
                k = k + 1;
            }

        </div>
        <span id="note"></span>
    }
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.4.4.js"></script>
    <script>
        $(document).ready(function () {
            var note = "*Note* : Please Login to rent a game.";
            $('#note').text(note);
            if (@show == "1") {
                $('[name=submit]').show();
                $('#note').hide();
            }

            else {
                $('[name=submit]').hide();
                $('#note').show();
            }
            var top1;
            var top4 = [];

            $.ajax({
                url: 'https://localhost:44309/api/top5',
                type: 'GET',
                async: false,
                dataType: 'json',
                success: function (data, textStatus, xhr) {
                    console.log(data);
                    length = data.length;
                    $('#length').text(length);
                    top1 = data[0].name;
                    $('#top1').text(top1);
                    for (i = 0; i < data.length; i++) {
                        top4.push(data[i].name);
                    }

                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log('Error in Operation');
                }

            });
        });</script>
</body>
</html>
