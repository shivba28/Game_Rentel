@using LoginMVC.Controllers;
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/game.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        .btndiv {
            position: relative;
            display: block;
            width: 200px;
            margin-left: 100px;
            margin-top: 20px;
        }

        input {
            border-radius: 50px;
            color:white;
        }

        #email {
            margin-top: 0;
        }

        .container .box {
            display: block;
            height: 350px;
            margin-top: 5%;
        }

            .box h1 {
                margin-top: 50px;
                margin-bottom: 50px;
            }
    </style>
    <title>Admin Login</title>
</head>
<body>
    <div class="bg-image"></div>
    @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post, new { ReturnUrl = this.Request.RawUrl }))
    {
<div class="container">
    <div class="box">
        <h1><u>Admin Login</u></h1>
        <input type="email" name="email" placeholder="enter email" id="email" required /><br /><br />
        <input type="password" name="password" placeholder="enter password" id="pword" required />
        <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
        <span>@ViewBag.errorMessage</span>
        <div class="btndiv">
            <button type="submit" class="btn btn-block btn-large btn-primary">LOGIN</button>
            <button type="reset" class="btn btn-block btn-large btn-primary">CLEAR</button>
        </div>
    </div>
</div>
    }
</body>
</html>
