
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Styles/StyleSheet1.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-1.4.4.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="~/Styles/game.css" rel="stylesheet" />
    <style>
        body {
            overflow-y:scroll;
        }
        table {
            margin-left: -280px;
            width: 1200px;
            border-radius: 30px;
            background-color: rgba(255,255,255,0);
        }


        .dataTables_length {
            margin-bottom: 30px;
            margin-top: -80px;
        }

        .dataTables_filter {
            margin-bottom: 20px;
        }

        .dataTables_filter input {
            margin-left: 10px;
        }

        li {
            font-size: 70px;
        }

        .list{
            position: relative;
            margin-left: 400px;
            margin-top:-60%;
        }

        .container .box {
            width: 1400px;
            margin-left: -500px;
            height: 730px;
            margin-top: -130px;
            background-color: rgba(255,255,255,0)
        }


        a{
            padding:10px;
        }

        select {
            background-color: rgba(0,0,0,0.5);
            color: white;
        }
    </style>
    <title>Active List</title>
</head>
<body>
    <div class="bg-image"></div>
    <div>

        <input id="page-nav-toggle" class="main-navigation-toggle" type="checkbox" />
        <label for="page-nav-toggle">
            <svg class="icon--menu-toggle" viewBox="0 0 60 30">
                <g class="icon-group">
                    <g class="icon--menu">
                        <path d="M 6 0 L 54 0" />
                        <path d="M 6 15 L 54 15" />
                        <path d="M 6 30 L 54 30" />
                    </g>
                    <g class="icon--close">
                        <path d="M 15 0 L 45 30" />
                        <path d="M 15 30 L 45 0" />
                    </g>
                </g>
            </svg>
        </label>

        <nav class="main-navigation">
            <ul>
                <li>@Html.ActionLink("Home", "AdminHome")</li>
                <li>@Html.ActionLink("Add Game", "AddGame")</li>
                <li>@Html.ActionLink("Update Game", "UpdateGame")</li>
                <li>@Html.ActionLink("Delete Game", "DeleteGame")</li>
                <li>@Html.ActionLink("Active Customers List", "ActiveList")</li>
            </ul>
        </nav>
        <div class="container">
        <div class="box">

                <main class="main-content">

                    <table id="datatable">
                        <thead>
                            <tr>
                                <th>ACTIVE USER NAME</th>
                                <th>GAME NAME</th>
                                <th>EMAIL</th>
                            </tr>
                        </thead>
                    </table>
                </main>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
          
            $.ajax({
                url: 'https://localhost:44309/api/Rentals',
                type: 'GET',
                dataType: 'json',
                success: function (data, textStatus, xhr) {
                    console.log(data);
                    $('#datatable').dataTable({
                        data: data,
                        columns: [
                         
                            { 'data': 'customer_name' },
                            { 'data': 'game_name' },
                            { 'data': 'email' },
                        ]
                    });
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log('Error in Operation');
                }
            });
        });</script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
